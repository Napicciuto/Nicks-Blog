<div id="header">
	
	<%= link_to "/" do %>
		<%= image_tag "logo-placeholder.png", class: "logo-img" %>
	<% end %>
	
	<div class="top-menu right">
			<%= link_to 'HOME', "/" %> | <%= link_to 'ABOUT US', "#" %> | <%= link_to "CONTACT US", "#" %> 
		<div class="user-area right">
			<% if author_signed_in? %>
	    		<%#= "Signed in as #{current_author.full_name}. Not you?" %>
	    		<%= link_to 'SIGN OUT', destroy_author_session_path, :method => :delete %> | PROFILE 
	  		<% else %>
	    		<%= link_to 'SIGN IN', new_author_session_path %> or
				<%= link_to "REGISTER", sign_up_path %>
	  		<% end %>
		</div>
	</div>
	<div class="clear"></div>
	<div class="main-menu">
		<%= link_to 'HOME', "/" %>
		<% Category.all.each do |menu| %>
			| <%= link_to menu.name.upcase, "#" %>
		<% end %>
	</div>
</div>